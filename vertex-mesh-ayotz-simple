#version 100
// ES 2.0 requires 100 or 300, which are the ES versions.

// To use this shader, each mesh must have a texture.

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

// uniform mat4 transpose_inverse_model;

attribute vec4 a_position;
attribute vec2 a_texcoord;

// attribute vec4 a_normal;

// attribute float specularExp;
// attribute vec4 ambientColor;
// attribute vec4 diffuseColor;
// attribute vec4 specularColor;

// varying vec4 v_position;
varying vec2 v_texcoord;
// varying vec4 v_normal;

// varying float v_specularExp;
// varying vec4 v_ambientColor;
// varying vec4 v_diffuseColor;
// varying vec4 v_specularColor;

void main()
{
    gl_Position = projection * view * model * a_position;
    v_texcoord = a_texcoord;

    // -- eye-space.
    // v_position = view * model * a_position;

    // vec4 normal = vec4 (vec3 (a_normal), 0.0);

    // v_normal = view * transpose_inverse_model * normal;
    // v_normal = view * model * normal;

    // v_specularExp = specularExp;
    // v_ambientColor = a_ambientColor;
    // v_diffuseColor = a_diffuseColor;
    // v_specularColor = a_specularColor;
}
