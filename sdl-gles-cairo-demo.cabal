      sdl-cairo-demo-cat >= 0.1.0.4 && <0.1.1
    , mesh-obj-gles >= 0.1.0.0 && <0.1.1
    , JuicyPixels >=3.2.8.3
    , OpenGL >=3.0.2.0 && <3.0.3
    , OpenGLRaw >= 3.3.0.1 && <3.3.1
    , StateVar >= 1.1.0 && <1.2
    , array >=0.5.1.1
    , base >=4.7 && <5
    , base64-bytestring >=1.0.0.1
    , bytestring >=0.10.8.1
    , cairo >=0.13.4.1 && <0.14
    , filepath >=1.4.1.1
    , linear >=1.20.7 && <2
    , sdl2 >=2.3.0 && <3
    , svg-tree >=0.6.2.1 && <0.7
    , split >= 0.2.3.3 && <0.2.4
    , time
    , vector >=0.11.0.0
    , random>= 1.1 && <2
    , matrix >=0.3.5 && <0.4
    , Stack >=0.3.2 && <0.4
    , cond >=0.4.1.1 && <0.4.2
    , raw-strings-qq >= 1.1 && <2
