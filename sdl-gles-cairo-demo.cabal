    -- , Glob >= 0.9.2 && <0.10
    , deepseq >= 1.4.2.0 && <1.4.4
    , containers >= 0.5.7.1 && <0.5.11
    , yaml >= 0.8.28 && <0.9
    , text >= 1.2.3.0 && <1.2.4
    --, freetype2 >= 0.1.2 && <0.2
